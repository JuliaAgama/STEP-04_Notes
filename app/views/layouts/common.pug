        link(rel="stylesheet", href="app/public/css/style.css")
        //- проверить правильность пути

        block addLinks
        block title
            title STEP 4. Notes (Ajax, Bootstrap, Node.js, MongoDB)

    body
        div(class="content-fluid")

            header(class="header row p-2", id="header")
                div(class="header-logo col-3 col-md-2 pr-2", id="headerLogo")
                    img(src="app/public/img/logo_main.png", alt="LOGO")
                    //- проверить правильность пути
                div(class="header-text col-9 col-md-10", id="headerText") Keep your memory clean like a child

            section(class="main-section row p-2", id="mainSection")

                block content


        script(src="https://code.jquery.com/jquery-3.4.1.min.js", integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=", crossorigin="anonymous")
