//- app/views/layouts/common.pug
//- общий шаблон для построения всех страниц
//- в т.ч. делаем общий хедер для всех страниц, а мейн-секшен будет свой на каждой странице
//- шаблон будет еще дорабатываться, в т.ч. бутстрапом

doctype html
html(lang="en")

    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")

        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.8.2/css/all.css", integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay", crossorigin="anonymous")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css", integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm", crossorigin="anonymous")

        block addLinks
        block title
            title STEP 4. Notes (Ajax, Bootstrap, Node.js, MongoDB)

    body
        header(
            class="header content-fluid bg-light"
            id="header"
            )
            div(class="row mx-0 px-2 px-lg-5 align-items-center")

                a(
                    class="header-logo col-3 col-lg-4 pr-1 pl-lg-5"
                    id="header-logo"
                    href="/"
                    )
                    img(
                        class="img-fluid"
                        src="/img/logo_main.png"
                        alt="LOGO"
                        )

                h1(
                    class="header-text col-9 col-lg-8 pr-3 pr-lg-5 text-right display-4 text-primary"
                    id="header-text"
                    style={'font-size': '7vw'}
                    ) Keep&nbspyour&nbspmemo clean&nbsplike&nbspa&nbspchild

        section(
            class="main-section content-fluid bg-light"
            id="mainSection"
            style={'min-height': "80vh"}
            )

            block content

        block addScripts




