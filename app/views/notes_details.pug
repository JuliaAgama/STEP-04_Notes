//- app/views/notes.pug
//- отображение страницы c заметкой 1-го типа '.../notes'
    //- карточка с названием (опционально) и текстом

extends layouts/common.pug

block addLinks

block content
    div.container

        form(method='POST', action='/api/notes/'+noteId, id='noteForm')

            form-group
                label Title:
                input.form-control.mt-3.mb-3(name='title', type='text', value= titleText)
            form-group
                label Note:
                textarea.form-control(name='description', type='text', rows = 8, required)= noteText
            input.btn.btn-success.mt-3.mb-3(type='submit', value='Save Note', id='save-btn')
            input.btn.btn-danger.mt-3.mb-3.ml-3(type='submit', value='Delete Note', id='delete-btn')


block addScripts
    script(src="/js/notes/script.js")
